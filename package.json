{
  "name": "printer-agent",
  "version": "1.0.0",
  "main": "dist/electron/main.js",
  "license": "MIT",
  "author": {
    "name": "Anderson Reinaldo"
  },
  "description": "Application Printer Agent",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "copy:assets": "node scripts/copy-assets.js",
    "build:electron": "tsc -p tsconfig.electron.json && yarn copy:assets",
    "electron:dev": "yarn build:electron && node scripts/dev.mjs",
    "electron:build": "yarn build && yarn build:electron && electron-builder --win",
    "rebuild": "electron-rebuild" 
  },
  "dependencies": {
    "@types/axios": "^0.14.4",
    "add": "^2.0.6",
    "axios": "^1.11.0",
    "cors": "^2.8.5",
    "electron-store": "8",
    "express": "^4.18.2",
    "lucide-react": "^0.535.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "serialport": "^13.0.0",
    "tailwind-merge": "^2.6.0",
    "tailwind-scrollbar": "^3.1.0",
    "ws": "^8.18.3",
    "yarn": "^1.22.22"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.9",
    "@tailwindcss/postcss": "^4.1.11",
    "@types/cors": "^2.8.19",
    "@types/electron-store": "^3.2.2",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.30",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@types/serialport": "^10.0.0",
    "@types/ws": "^8.18.1",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.2.0",
    "electron": "^29.0.0",
    "electron-builder": "^24.0.0",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.8.3",
    "vite": "^7.0.6"
  },
  "build": {
    "appId": "com.rtech.printeragent",
    "productName": "printer-agent",
    "icon": "assets/icon.ico",
    "win": {
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false
    },
    "files": [
      "dist/electron/**/*",
      "dist/renderer/**/*",
      "dist/assets/**/*",
      "dist/index.html",
      "node_modules/**/*",
      "package.json"
    ]
  }
}
