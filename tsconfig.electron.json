{
  "compilerOptions": {
    "outDir": "dist/electron",
    "rootDir": "electron",
    "module": "commonjs",
    "target": "ES2020",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true,
    "allowJs": true,
    "strict": true,
    "sourceMap": true,
    "skipLibCheck": true
  },
  "include": ["electron/**/*.ts"],
  "exclude": ["node_modules"]
}
